        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Проверка" Background="WhiteSmoke" HorizontalAlignment="Center" Padding="5" Margin="5" Command="{Binding CheckConnection}" />
            <Button Content="Соединить" Background="WhiteSmoke" HorizontalAlignment="Center" Padding="5" Margin="5" Command="{Binding CreateConnection}" />
        </StackPanel>
    </StackPanel>
